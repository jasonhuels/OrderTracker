<!DOCTYPE html>
<html>
    <head>
        @using OrderTracker.Models;
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel="stylesheet" type="text/css" media="screen" href="~/css/styles.css">
        <title>Vendors</title>
    </head>
    <body>
       <div class="container">
            <h1>Vendors</h1>

            @if (@Model.Count == 0)
            {
            <h2>You don't have any vendors yet.</h2>
            } 

            @foreach (Vendor vendor in Model)
            {
            <h2><a href='/vendors/@vendor.ID'>@vendor.Name: @vendor.Description</a></h2>
            }
            <h2><a href='/'>Return Home</a></h2>
       </div>
    </body>
</html>