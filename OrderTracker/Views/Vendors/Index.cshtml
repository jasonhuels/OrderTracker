<!DOCTYPE html>
<html>
    <head>
        @using OrderTracker.Models;
        <link rel="stylesheet" type="text/css" media="screen" href="~/css/styles.css">
        <title>Vendors</title>
    </head>
    <body>
        <h1>Vendors</h1>

        @if (@Model.Count == 0)
        {
        <h2>You don't have any vendors yet.</h2>
        } 

        @foreach (Vendor vendor in Model)
        {
        <h2><a href='/vendors/@vendor.ID'>@vendor.Name</a></h2>
        }
        <p><a href='/'>Return Home</a></p>
    </body>
</html>